<resources>

    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/style_color_primary</item>
        <item name="colorPrimaryDark">@color/style_color_primary_dark</item>
        <item name="colorAccent">@color/style_color_accent</item>
        <item name="android:windowAnimationStyle">@style/actAnimation</item>
    </style>

    <style name="AppTheme.Base.Fullscreen" parent="AppTheme.Base">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Toolbar.AppCompat.Responsive" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarSize">@dimen/titlebar_height</item>
        <item name="actionBarSize">@dimen/titlebar_height</item>
        <item name="selectableItemBackground">@drawable/titlebar_btn_click_style</item>
        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Custom.Widget.Toolbar.Navigation</item>
    </style>

    <style name="Custom.Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="maxButtonHeight">@dimen/titlebar_height</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="AppTheme.ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/text_xl</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextMax" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/text_xl</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Custom.Widget.Toolbar.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">@dimen/titlebar_height</item>
    </style>

    <style name="StartTheme" parent="AppTheme.Base">
        <item name="android:windowBackground">@drawable/bg_start</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SwipeBackTheme" parent="AppTheme.Base">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ImageSelectStyle" parent="AppTheme.Base">
        <item name="colorPrimaryDark">@color/style_color_primary</item>
    </style>

    <style name="IncomeActivityStyle" parent="AppTheme.Base">
        <item name="colorPrimaryDark">@color/green</item>
    </style>

    <style name="PvHistoryActivityStyle" parent="AppTheme.Base">
        <item name="colorPrimaryDark">@color/blue</item>
    </style>

    <style name="ActDetailStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 有时间选择器的界面主题 -->
    <style name="ActionBarStyleHasDate" parent="AppTheme.Base">
        <item name="numberPickerUpButtonStyle">@style/AiWidget.ImageButton.NumberPickerUpButton.Light</item>
        <item name="numberPickerDownButtonStyle">@style/AiWidget.ImageButton.NumberPickerDownButton.Light</item>
        <item name="numberPickerInputTextStyle">@style/AiWidget.EditText.NumberPickerInputText.Light</item>
        <item name="numberPickerStyle">@style/AiWidget.NumberPicker</item>
    </style>

    <!-- dialog style-->
    <style name="dialog_tran" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

    <style name="dialog_untran" parent="dialog_tran">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DialogBottomInAnim" parent="android:Animation.Dialog" >
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <style name="DialogTopInAnim" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_top_in</item>
        <item name="android:windowExitAnimation">@anim/anim_top_out</item>
    </style>

    <style name="LoadingDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="actAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_new</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_back</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_finish</item>
        <item name="android:taskOpenEnterAnimation">@anim/activity_new</item>
        <item name="android:taskOpenExitAnimation">@anim/activity_out</item>
        <item name="android:taskCloseEnterAnimation">@anim/activity_back</item>
        <item name="android:taskCloseExitAnimation">@anim/activity_finish</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">60dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <style name="act_item_text_style">
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>


    <!--白色输入框，normal时只是白色背景，焦点是有灰色边框-->
    <style name="edit_white_style" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_l</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColorHint">@color/gray_dark</item>
        <item name="android:background">@drawable/edit_white_bg_style</item>
    </style>


    <!--底部弹出Dialog -->
    <style name="DataSheetAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_down_out</item>
    </style>

    <style name="MMButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/mm_btn_text</item>
        <item name="android:background">@null</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">40dp</item>
    </style>

    <style name="MMLineButton" parent="@style/MMButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mm_style_two_btn_text</item>
    </style>

    <style name="MMLineActionButton" parent="@style/MMLineButton">
        <item name="android:textColor">@color/mm_style_one_btn_text</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowRadius">1</item>
    </style>
</resources>
