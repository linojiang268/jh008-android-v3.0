<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/indication"
        android:layout_width="@dimen/loading_view_shadow_width"
        android:layout_height="@dimen/loading_view_shadow_high"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/loading_view_shadow_margintop"/>

    <TextView
        android:id="@+id/promptTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/indication"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/loading_view_text_margintop"
        android:minWidth="45dp"
        android:text="加载中..."
        android:textColor="@color/black"
        android:textSize="@dimen/loading_view_text_size"/>

    <com.gather.android.widget.ShapeLoadingView
        android:id="@+id/shapeLoadingView"
        android:layout_width="@dimen/loading_view_shape_view_size"
        android:layout_height="@dimen/loading_view_shape_view_size"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"/>

</RelativeLayout>