<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/ViewFistItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_sixteen"
        android:background="@color/transparent" />


    <LinearLayout
        android:id="@+id/llItemAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg_click_style"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_sixteen"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="@dimen/size_sixteen"
                    android:lineSpacingExtra="4dp"
                    android:text="这个就是消息的内容这个就是消息的内容这个就是消息的内容这个就是消息的内容这个就是消息的内容这个就是消息的内容这个就是消息的内容这个就是消息的内容这个就是消息的内容"
                    android:textColor="#666666"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_sixteen"
                    android:layout_marginLeft="@dimen/size_sixteen"
                    android:layout_marginRight="@dimen/size_sixteen"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:src="@drawable/icon_gray_time" />

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:text="2015-12-12 16:90"
                        android:textColor="#9D9D9D"
                        android:textSize="@dimen/text_s" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/ivArrow"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:src="@drawable/arrow_right" />
        </LinearLayout>


        <View
            android:id="@+id/bottomLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/line_color" />
    </LinearLayout>

</LinearLayout>