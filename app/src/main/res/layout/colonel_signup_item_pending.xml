<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/itemFrame"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivSelect"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/white_btn_click_style"
            android:padding="18dp"
            android:scaleType="centerInside"
            android:src="@drawable/colonel_icon_unselected"/>

        <TextView
            android:id="@+id/tvNickname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxWidth="120dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:padding="5dp"
            android:text="昵称"
            android:gravity="center"
            android:textSize="@dimen/text_l"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvCallNumber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:ellipsize="end"
            android:padding="5dp"
            android:background="@drawable/white_btn_click_style"
            android:text="15228838270"
            android:gravity="center_vertical|left"
            android:textSize="@dimen/text_s"
            android:textColor="@color/gray_dark"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"/>

        <ImageView
            android:id="@+id/btnDetail"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:background="@drawable/white_btn_click_style"
            android:src="@drawable/colonel_arrow_down"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/line_color" />

</LinearLayout>