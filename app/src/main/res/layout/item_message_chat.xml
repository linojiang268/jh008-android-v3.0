<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/ViewFistItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_sixteen"
        android:background="@color/transparent" />

    <LinearLayout
        android:id="@+id/llItemAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_sixteen"
            android:layout_marginRight="@dimen/size_sixteen"
            android:layout_marginTop="@dimen/size_sixteen"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="45dp"
                android:layout_height="45dp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/ivUserIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    fresco:pressedStateOverlayImage="@drawable/shape_circle_image_click_style"
                    fresco:actualImageScaleType="centerCrop"
                    fresco:fadeDuration="300"
                    fresco:placeholderImage="@drawable/def_headportrait"
                    fresco:roundAsCircle="true" />

                <View
                    android:id="@+id/viewSex"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_circle_blue" />
            </FrameLayout>

            <TextView
                android:id="@+id/tvOrgName"
                android:layout_width="0.0dp"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="社团名字真的是很长的"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <ImageView
                android:layout_marginLeft="5dp"
                android:id="@+id/ivShield"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_sixteen"
            android:layout_marginRight="@dimen/size_sixteen"
            android:layout_marginTop="7dp"
            android:lineSpacingExtra="4dp"
            android:text="这个就是消息的内容这个就是消息的内容这个就是消息的内容这个就是消息的内容这个就是消息的内容这个就是消息的内容这个就是消息的内容这个就是消息的内容这个就是消息的内容"
            android:textColor="#666666"
            android:textSize="@dimen/text_m" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_sixteen"
            android:layout_marginLeft="@dimen/size_sixteen"
            android:layout_marginRight="@dimen/size_sixteen"
            android:layout_marginTop="7dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:src="@drawable/icon_gray_time" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:text="2015-12-12 16:90"
                android:textColor="#999999"
                android:textSize="@dimen/text_s" />
        </LinearLayout>

        <View
            android:id="@+id/bottomLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/line_color" />
    </LinearLayout>

</LinearLayout>