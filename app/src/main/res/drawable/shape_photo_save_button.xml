<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
        <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />

        <solid android:color="#FFCCCCCC" />
        <stroke android:color="#FFCCCCCC" android:width="1dp"/>
    </shape></item>
    <item><shape>
        <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />

        <gradient android:angle="90" android:endColor="#00000000" android:startColor="#00000000" />
        <stroke android:color="@color/white" android:width="1dp"/>
    </shape></item>

</selector>